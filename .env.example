# 資料庫密碼 (可選，預設 household123)
MYSQL_PASSWORD=household123

# 排程設定
# ENABLE_SCHEDULER=true
# SCHEDULE_MODE=cron
# SCHEDULE_HOUR=2
# SCHEDULE_MINUTE=0

# ============================================================
# 異常通知設定
# ============================================================
# 是否啟用通知 (true/false)
NOTIFICATION_ENABLED=false

# SMTP 伺服器設定 (預設使用 Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# 寄件人帳號 (Gmail 需使用應用程式密碼)
# 取得 Gmail 應用程式密碼: https://myaccount.google.com/apppasswords
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
